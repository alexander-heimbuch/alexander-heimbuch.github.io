<span class="news-logo"><img src="{logo}"/></span><h3 style="color: {color};" class="news-headline">{title}</h3>
<ul class="news-list text">
    {#items}
        <li class="news-item {visited}" data-link="{link}">
            <span class="marker" style="background-color: {color};">
                <i class="fa fa-dot-circle-o"></i>
                <i class="fa fa-check-circle-o"></i>
            </span>
            <span class="news-link">{title}</span>
        </li>
    {/items}
</ul>